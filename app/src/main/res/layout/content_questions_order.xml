<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_questions_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="am.app.QuestionsOrder"
    tools:showIn="@layout/activity_questions_order">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question_order"/>



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RadioGroup>

    <RadioButton android:id="@+id/Bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/B"
        android:onClick = "onRadioButtonClicked"
        android:layout_above="@+id/Cc"
        android:layout_toRightOf="@+id/question_order"
        android:layout_toEndOf="@+id/question_order"
        android:layout_marginBottom="69dp" />

    <RadioButton android:id="@+id/Cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/C"
        android:onClick = "onRadioButtonClicked"
        android:layout_marginBottom="145dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/question_order"
        android:layout_toEndOf="@+id/question_order" />

    <RadioButton android:id="@+id/Aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/A"
        android:onClick="onRadioButtonClicked"
        android:layout_alignBottom="@+id/Bb"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="72dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEAT"
        android:id="@+id/cheat_button"
        android:onClick="goToCheat"
        android:layout_alignBottom="@+id/skip_button"
        android:layout_toRightOf="@+id/skip_button"
        android:layout_toEndOf="@+id/skip_button"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKIP"
        android:id="@+id/skip_button"
        android:onClick="goToNextQuestion"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/question_order"
        android:layout_toEndOf="@+id/question_order" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISHED -> go to score"
        android:id="@+id/end_button"
        android:onClick="goToScore"/>

</RelativeLayout>
