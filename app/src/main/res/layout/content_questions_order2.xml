<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_questions_order2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="am.app.QuestionsOrder2"
    tools:showIn="@layout/activity_questions_order2">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignRight="@+id/button16"
        android:layout_alignEnd="@+id/button16"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:id="@+id/textView21"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textView13"
        android:textSize="18sp"
        android:layout_below="@+id/textView21"
        android:layout_centerHorizontal="true" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup5"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true">

    </RadioGroup>

    <RadioButton
    android:text="RadioButton"
    android:onClick="onRadioButtonClicked2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/Cc2R"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Bb2R"
        android:layout_alignStart="@+id/Bb2R"
        android:textSize="18sp" />

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button15"
        android:onClick="goToSkipRandom"
        android:layout_below="@+id/Cc2R"
        android:layout_toLeftOf="@+id/Aa2R"
        android:layout_toStartOf="@+id/Aa2R"
        android:layout_marginTop="82dp" />

    <Button
        android:text="Cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:onClick="goToCheatRandom"
        android:layout_alignBaseline="@+id/button15"
        android:layout_alignBottom="@+id/button15"
        android:layout_toRightOf="@+id/Aa2R"
        android:layout_toEndOf="@+id/Aa2R"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <RadioButton
        android:text="RadioButton"
        android:onClick="onRadioButtonClicked2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Aa2R"
        android:textSize="18sp"
        android:layout_below="@+id/Cc2R"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <RadioButton
        android:text="RadioButton"
        android:onClick="onRadioButtonClicked2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bb2R"
        android:layout_above="@+id/Cc2R"
        android:layout_alignLeft="@+id/Aa2R"
        android:layout_alignStart="@+id/Aa2R"
        android:layout_marginBottom="16dp"
        android:textSize="18sp" />
</RelativeLayout>
