<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_select_question_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="am.app.SelectQuestionScreen"
    tools:showIn="@layout/activity_select_question_screen">

    <TextView
        android:text="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView3"
        android:textSize="36sp" />


    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/SkipButton"
        android:layout_alignEnd="@+id/SkipButton" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SkipButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">
    <RadioButton
        android:text="RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonA"
        android:onClick="onRadioButtonClicked"
        android:layout_above="@+id/radioButtonC"
        android:layout_alignLeft="@+id/radioButtonB"
        android:layout_alignStart="@+id/radioButtonB"
        android:layout_marginBottom="27dp" />

    <RadioButton
        android:text="RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonC"
        android:onClick="onRadioButtonClicked"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/CheatButton"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <RadioButton
        android:text="RadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonB"
        android:onClick="onRadioButtonClicked"
        android:layout_below="@+id/radioButtonA"
        android:layout_alignLeft="@+id/radioButtonC"
        android:layout_alignStart="@+id/radioButtonC" />
    </RadioGroup>

    <Button
        android:text="Cheat"
        android:onClick="goToCheatSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheatButton"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <Button
        android:text="Skip"
        android:onClick="goToSkipSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SkipButton"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignBaseline="@+id/CheatButton"
        android:layout_alignBottom="@+id/CheatButton"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

</RelativeLayout>
